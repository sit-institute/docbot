{
    "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
    "features": {
        "ghcr.io/devcontainers-extra/features/uv:1": {},
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "runArgs": [
        "--gpus=all"
    ],
    "hostRequirements": {
        "gpu": "optional"
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libgl1-mesa-glx libglib2.0-0 && pip install -r .github/skills/local-rag-pipeline/scripts/requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "tomoki1207.pdf",
                "mermaidchart.vscode-mermaid-chart",
                "yzhang.markdown-all-in-one",
                "GitHub.copilot-chat",
                "eamodio.gitlens"
            ]
        }
    }
}